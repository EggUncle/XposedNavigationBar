<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/space_m"
    android:paddingRight="@dimen/space_m"
    android:paddingBottom="@dimen/space_m"
    >

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_item_clip_content"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <ImageView
        android:src="@drawable/ic_content_copy"
        android:scaleType="fitCenter"
        android:id="@+id/btn_item_clip"
        android:layout_width="@dimen/icon_size_m"
        android:layout_height="@dimen/icon_size_m" />

</LinearLayout>